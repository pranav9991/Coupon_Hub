<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register</title>
    <link rel="stylesheet" href="/CSS/style.css">
    <link rel="stylesheet" href="/CSS/style2.css"> <!-- Updated to match signin -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>

<body>
    <!-- Include Header -->
    <%- include("header") %>

    <div class="container">
        <div class="formBox">
            <form action="/addUser" method="POST" name="FormFill" class="needs-validation" novalidate>
                <h2>Sign-Up</h2>
                <% if (typeof error !== 'undefined') { %>
                    <div class="alert alert-danger">
                        <%= error %>
                    </div>
                <% } %>
                <p id="result"></p>

                <div class="inputBox">
                    <i class="fa-solid fa-user"></i>
                    <input type="text" name="name" placeholder="Name" value="<%= typeof formData !== 'undefined' ? formData.name : '' %>" required>
                </div>

                <div class="inputBox">
                    <i class="fa-solid fa-envelope"></i>
                    <input type="email" name="email" placeholder="Email" value="<%= typeof formData !== 'undefined' ? formData.email : '' %>" required>
                </div>

                <div class="inputBox">
                    <i class="fa-solid fa-phone"></i>
                    <input type="text" name="phone" placeholder="Phone" value="<%= typeof formData !== 'undefined' ? formData.phone : '' %>" required>
                </div>

                <div class="inputBox">
                    <i class="fa-solid fa-lock"></i>
                    <input type="password" name="password" placeholder="Password" required>
                </div>

                <div class="inputBox">
                    <i class="fa-solid fa-lock"></i>
                    <input type="password" name="ConfirmPassword" placeholder="Confirm Password" required>
                </div>

                <div class="button">
                    <input type="submit" class="btn" value="Sign-Up">
                </div>

                <div class="group">
                    <span><a href="#">Forget Password</a></span>
                    <span><a href="/signin">Login</a></span>
                </div>
            </form>
        </div>
    </div>

    <script src="/js/script.js"></script>

    <!-- Include Footer -->
    <%- include("footer") %>
</body>
</html>