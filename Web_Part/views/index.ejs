<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Coupon Hub || Home</title>
    <link rel="stylesheet" href="/css/style.css">
    <!-- Font Awesome for Chatbot Icon -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <!-- Inline CSS for Chatbot Button -->
    <style>
        .chatbot-button {
            position: fixed;
            bottom: 20px;
            right: 20px;
            background-color: #007bff;
            color: white;
            padding: 12px 20px;
            border-radius: 50px;
            text-decoration: none;
            font-size: 16px;
            display: flex;
            align-items: center;
            gap: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            transition: background-color 0.3s ease;
            z-index: 1000;
        }

        .chatbot-button:hover {
            background-color: #0056b3;
        }

        .chatbot-button i {
            font-size: 20px;
        }
    </style>
</head>

<body>
    <!-- Include Header -->
    <%- include("header") %>

    <% if (messages.error) { %>
      <div class="alert alert-danger"><%= messages.error %></div>
    <% } %>
    <% if (messages.success) { %>
      <div class="alert alert-success"><%= messages.success %></div>
    <% } %>

    <section class="search">
        <form action="/search" method="GET">
            <input class="searchBar" placeholder="Search Any Coupon Name or Organization..." type="search" name="search" required>
            <button class="searchSubmit"><i class="sea fa-solid fa-magnifying-glass"></i></button>
        </form>
    </section>
    <section class="recommendations">
        <h3>Recommended For You</h3>
        <% if (locals.recommendedCoupons && recommendedCoupons.length) { %>
            <div class="coupon-grid">
                <% recommendedCoupons.forEach(coupon => { %>
                    <div class="coupon-card">
                        <% if (coupon.image) { %>
                            <img src="<%= coupon.image %>" alt="<%= coupon.OrganizationName %>">
                        <% } %>
                        <div class="coupon-info">
                            <h4><%= coupon.Title %></h4>
                            <p class="org"><%= coupon.OrganizationName %></p>
                            <% if (coupon.discount) { %>
                                <p class="discount"><%= coupon.discount %></p>
                            <% } %>
                        </div>
                    </div>
                <% }); %>
            </div>
        <% } else { %>
            <p>Check out our latest coupons!</p>
        <% } %>
    </section>

    <!-- Collaboration Section -->
    <section class="bg-grey py-5">
        <div class="container text-center">
            <h2> We are Collaborated With <span class="text-primary">250+</span> Organizations</h2>
            <div class="collaboration justify-content-around align-items-center flex-wrap">
                <img src="/photos/dominos.png" alt="Dominos">
                <img src="/photos/swiggy.png" alt="Swiggy">
                <img src="/photos/zomato.jpg" alt="Zomato">
                <img src="/photos/dell.webp" alt="Dell">
                <img src="/photos/one8.jpg" alt="One8">
                <img src="/photos/croma.jpg" alt="Croma">
            </div>
        </div>
    </section>

    <!-- Top Deals -->
    <section class="topdeals">
        <h2 class="text-center py-5 m5">Top Deals Today</h2>
        <div class="card">
            <div class="cardno">
                <div class="card-image">
                    <img src="/photos/dominos.png" alt="Domino's">
                </div>
                <div class="card-header">Up to 60% OFF</div>
            </div>
            <div class="cardno">
                <div class="card-image">
                    <img src="/photos/croma.jpg" alt="Croma">
                </div>
                <div class="card-header">Up to 60% OFF</div>
            </div>
            <div class="cardno">
                <div class="card-image">
                    <img src="/photos/swiggy.png" alt="Swiggy">
                </div>
                <div class="card-header">Up to 60% OFF</div>
            </div>
            <div class="cardno">
                <div class="card-image">
                    <img src="/photos/zomato.jpg" alt="Zomato">
                </div>
                <div class="card-header">Up to 60% OFF</div>
            </div>
        </div>
    </section>

    <!-- Contribute Section -->
    <section class="contribute m5">
        <div class="heading text-center h2">
            <strong> Want to Contribute to Us?</strong>
        </div>
        <center>
            <form action="/allCoupons" method="POST" enctype="application/x-www-form-urlencoded">
                <div class="formImage">
                    <a href="/">
                        <img src="/image/logo.jpg" alt="logo" width="200px">
                    </a>
                </div>
                <input type="text" id="code" name="code" required minlength="4" placeholder="Enter The Code"><br>
                <select id="organizationName" name="organizationName" class="inputBox" required onchange="showOrgImage()">
                    <option value="" disabled selected>Select Organization</option>
                    <option value="Dominos">Dominos</option>
                    <option value="Swiggy">Swiggy</option>
                    <option value="Zomato">Zomato</option>
                    <option value="Dell">Dell</option>
                    <option value="One8">One8</option>
                    <option value="Croma">Croma</option>
                </select><br>
                <div id="orgImageContainer" style="display:none; margin:10px 0;">
                    <img id="orgImage" src="" alt="Organization Logo" style="max-width:200px; max-height:100px;">
                </div>
                <input type="hidden" id="image" name="image" value="">
                <input type="text" id="category" name="category" placeholder="Enter category">
                <input type="text" id="Title" name="Title" placeholder="Coupon Title"><br>
                <input type="text" id="discount" name="discount" placeholder="Enter the discount">
                <input type="number" id="price" name="price" min="0" step="1" placeholder="Coupon Price"><br>
                <input type="date" id="date" name="expiry">
                <textarea cols="30" rows="10" id="description" name="description" placeholder="Enter description"></textarea><br>
                <input type="submit" value="Submit">
            </form>
        </center>
    </section>

    <!-- Include Footer -->
    <%- include("footer") %>

    <!-- Floating Chatbot Button -->
    <a href="http://localhost:8000/chatbot" class="chatbot-button" title="Open Chatbot">
        <i class="fa-solid fa-comment"></i> Chat
    </a>

    <script src="/js/script.js"></script>
</body>
</html>